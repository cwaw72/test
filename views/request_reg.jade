			.hidden-xs(style='margin-top:60px')
			p.header_jun 1. 상품 정보 입력
			.row
				form(action='/avatar_upload.php', method='post', enctype='multipart/form-data', style='')
					// 이미지 등록 & 기본 정보 입력 란
					#reg_picture.col-xs-12.col-sm-4(style='text-align:center')
